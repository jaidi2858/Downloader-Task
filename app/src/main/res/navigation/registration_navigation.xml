<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_navigation"
    app:startDestination="@+id/signInFragment">


    <fragment
        android:id="@+id/signupFragment"
        android:name="com.rapidzz.kidcap.Views.fragments.SignUpFragment"
        android:label="Signup">

    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.rapidzz.tawridcustomer.view.fragments.registration.SignInFragment"
        android:label="SignInFragment" >
        <action
            android:id="@+id/action_signInFragment_to_signupFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_signInFragment_to_completeInfoFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@string/sign_in"
            app:popUpToInclusive="true"
            app:destination="@id/completeInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.rapidzz.tawridcustomer.view.fragments.registration.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
    <fragment
        android:id="@+id/completeInfoFragment"
        android:name="com.rapidzz.kidcap.Views.fragments.CompleteInfoFragment"
        android:label="CompleteInfoFragment" />

</navigation>
