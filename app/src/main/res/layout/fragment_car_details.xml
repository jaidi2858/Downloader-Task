<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.fragments.CarDetailsFragment">


 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_200sdp"
                android:src="@drawable/button_background"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="@dimen/_100sdp"/>

            <TextView
                style="@style/TvTitleStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/car_details"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/edittext_background_new"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"

                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TvTitleStyle"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:textAlignment="viewStart"
                        android:textStyle="normal"
                        android:text="@string/reg_no"/>
                    <TextView
                        style="@style/TvTitleStyle"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:textStyle="normal"
                        android:textAlignment="viewEnd"
                        android:text="LCIAREW"/>
                </LinearLayout>

                <TextView
                    style="@style/TvTitleStyle"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:text="Volvo XC 90 Estate 2,4 D5\nDiesel 01/11 - 12/12"/>

            </LinearLayout>

            <TextView
                style="@style/TvTitleStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/mot_expire"/>
            <EditText
                android:layout_marginTop="@dimen/_5sdp"
                style="@style/editTextStyle"/>
        </LinearLayout>

        <View
            android:background="@color/lite_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                style="@style/TvExtraHeadingStyle"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/menu"/>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/edittext_background_new"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                android:layout_height="wrap_content">
                <ExpandableListView
                    android:id="@+id/simple_expandable_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#000000"
                    tools:listheader="@layout/header"
                    android:dividerHeight="1dp" >
                </ExpandableListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

 </ScrollView>
</LinearLayout>