                        android:textAlignment="viewStart"

                        />




                    <AutoCompleteTextView
                        android:id="@+id/etMQualification"
                        style="@style/editTextStyle"
                        android:hint="Enter details.."
                        android:inputType="textEmailAddress"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llMProfesions"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TvHeadingStyle"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@string/mother_profession"
                        android:textAlignment="viewStart"

                        />




                    <AutoCompleteTextView
                        android:id="@+id/etMProfession"
                        style="@style/editTextStyle"
                        android:hint="Enter details.."
                        android:inputType="textEmailAddress"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llMDesignation"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TvHeadingStyle"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@string/mother_designation"
                        android:textAlignment="viewStart"

                        />

                    <EditText
                        android:id="@+id/etMDesignation"
                        style="@style/editTextStyle"
                        android:hint="Enter details.."
                        android:inputType="textEmailAddress"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llMAnnualIcome"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TvHeadingStyle"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@string/mother_annual_income"
                        android:textAlignment="viewStart"

                        />

                    <EditText
                        android:id="@+id/etMAnuualIcome"
                        style="@style/editTextStyle"
                        android:hint="Enter details.."
                        android:inputType="number"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/llMPAN"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/TvHeadingStyle"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@string/mother_pan"
                        android:textAlignment="viewStart"

                        />

                    <EditText
                        android:id="@+id/etMPAN"
                        style="@style/editTextStyle"
                        android:hint="Enter details.."
                        android:inputType="textEmailAddress"
                        />


                </LinearLayout>



            </LinearLayout>


            <Button
                android:id="@+id/btnSubmitDetails"
                style="@style/buttonStyle"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/button_background"
                android:text="@string/submit_details" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>
