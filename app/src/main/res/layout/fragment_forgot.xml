<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/llSendInstructions"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                style="@style/TvExtraHeadingStyle"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/forgot_npassword" />
            <TextView
                style="@style/TvHeadingStyle"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/please_enter_email_on_which_n_you_have_account" />





            <EditText
                android:id="@+id/etResetEmail"
                style="@style/editTextStyle"
                android:layout_marginTop="@dimen/margin_xxxlarge"
                android:hint="@string/enter_your_email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/btnSendCode"
                style="@style/buttonStyle"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/button_background"
                android:text="@string/send_instructions" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/llResetPassword"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                style="@style/TvExtraHeadingStyle"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/enter_6_digits_nrecovery_code" />
            <TextView
                style="@style/TvHeadingStyle"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:id="@+id/tvSentAt"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/the_recovery_code_sent_to" />





            <TextView
                style="@style/TvHeadingStyle"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/margin_xxxlarge"
                android:text="@string/please_enter_code" />
            <EditText
                android:id="@+id/etRecoveryCode"
                style="@style/editTextStyle"
                android:hint="@string/paste_code_here"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/btnReset"
                style="@style/buttonStyle"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/button_background"
                android:text="@string/reset" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/llChangePassword"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="15dp">


            <TextView
                style="@style/TvExtraHeadingStyle"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/update_password" />

            <TextView
                style="@style/TvHeadingStyle"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/_10sdp"
                android:textColor="@color/colorDarkGrey"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/update_your_password_by_entering_new_password_here" />





            <EditText
                android:id="@+id/etPassword"
                style="@style/editTextStyle"
                android:layout_marginTop="@dimen/_50sdp"
                android:hint="@string/enter_password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/etReTypePassword"
                style="@style/editTextStyle"
                android:hint="@string/confirm_password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/btnChangePassword"
                style="@style/buttonStyle"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@drawable/button_background"
                android:text="Update password" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>