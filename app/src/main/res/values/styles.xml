<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpeechDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorDarkGrey</item>
        <item name="android:background">@color/colorDarkGrey</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TvNormalStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/sf_compact_thin</item>
    </style>


    <style name="TvHeadingStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/sf_compact_regular</item>
    </style>

    <style name="TvExtraHeadingStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
    </style>


    <style name="buttonStyle" >
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_37sdp</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>

    </style>


    <style name="editTextStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>



    <style name="editTextOutlineStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_outline_et</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>



    <style name="spinnerStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_outline_et</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>



    <style name="layoutETStyle">
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sf_compact_medium</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/edittext_layout_background</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
